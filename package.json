{
  "name": "@schotsl/uwuifier",
  "version": "2.0.4",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "unpkg": "dist/index.umd.js",
  "author": "Sjors van Holst",
  "license": "ISC",
  "homepage": "https://github.com/Schotsl/uwuifier#readme",
  "repository": "git://github.com/Schotsl/Uwuifier.git",
  "files": [
    "/dist"
  ],
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  },
  "bugs": {
    "url": "https://github.com/Schotsl/uwuifier/issues"
  },
  "keywords": [
    "Uwuifier",
    "Sentence",
    "Anime",
    "Faces",
    "Weeb", 
    "UwU",
    "OwO"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "ts": "^0.2.2",
    "ts-jest": "^26.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "serve": "nodemon",
    "build": "npm run lint && npm run format && npm run test && ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build && parcel build dist/index.js -o dist/index.umd.js"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build",
    "ext": "ts"
  },
  "engines": {
    "npm": "*",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  }
}
